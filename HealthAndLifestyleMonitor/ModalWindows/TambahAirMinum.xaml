<Window x:Class="HealthAndLifestyleMonitor.ModalWindows.TambahAirMinum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthAndLifestyleMonitor"
        mc:Ignorable="d"
        Title="Tambah Data Minum" Height="200" Width="250" WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=textboxLiter}" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Berapa liter?" FontSize="14" HorizontalAlignment="Center" Padding="0"/>
            <TextBox x:Name="textboxLiter" FontSize="20" TextAlignment="Center" Margin="0,15,0,10"/>
            <Button x:Name="buttonTambah" Content="Tambah" IsDefault="True" HorizontalAlignment="Center" Padding="10,5,10,5" Click="buttonTambah_Click"/>
        </StackPanel>
    </Grid>
</Window>
