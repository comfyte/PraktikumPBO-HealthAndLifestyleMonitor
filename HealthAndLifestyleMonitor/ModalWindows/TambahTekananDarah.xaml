<Window x:Class="HealthAndLifestyleMonitor.ModalWindows.TambahTekananDarah"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthAndLifestyleMonitor"
        mc:Ignorable="d"
        Title="TambahTekananDarah" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <Label Content="Masukkan tekanan darah sistolik dan diastolik" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBox x:Name="textboxSistolik" Width="100" Margin="0,0,10,0"/>
                <TextBox x:Name="textboxDiastolik" Width="100"/>
            </StackPanel>
            <Button x:Name="buttonTambah" Content="Tambah" HorizontalAlignment="Center" Click="buttonTambah_Click"/>
        </StackPanel>
    </Grid>
</Window>
